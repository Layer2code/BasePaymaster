{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "sdk",
    "lib": [
      "ES2021"
    ],
  },
  "include": [
    "sdk"
  ]
}